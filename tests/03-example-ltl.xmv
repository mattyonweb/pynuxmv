MODULE main

VAR
i: integer;
j: integer;
line: integer;

ASSIGN
init(i) := 0;
init(j) := 0;
init(line) := 1;

next(line) := case
	line = 4 & j = 0: line + 1; -- if(True)
	line = 4: 7; -- if(False)
	line = 3 & i = 0: line + 1; -- if(True)
	line = 3: 8; -- if(False)
	line = 9: 9; 
	TRUE: line + 1; 
esac;

next(i) := case
	line = 5: 0;
	line = 8: 99;
	TRUE: i; 
esac;

next(j) := case
	TRUE: j; 
esac;

LTLSPEC F i = 99;
