MODULE main

VAR
i: integer;
x: integer;
line: integer;

ASSIGN
init(i) := 0;
init(x) := 0;
init(line) := 1;

next(line) := case
	line = 3 & (1 + 1 < 0 & x > 10 | 1 + 1 >= 0 & x < 10): line + 1; -- while(True)
	line = 3:  7; -- while(False)
	line = 6: 3; -- loop while
	line = 7: 7; 
	TRUE: line + 1; 
esac;

next(i) := case
	line = 4: i + x;
	TRUE: i; 
esac;

next(x) := case
	line = 5: x + 1 + 1;
	TRUE: x; 
esac;

LTLSPEC F i = 20;
