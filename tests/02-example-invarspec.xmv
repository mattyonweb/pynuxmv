MODULE main

VAR
i: integer;
j: integer;
line: integer;

ASSIGN
init(i) := 0;
init(j) := 0;
init(line) := 1;

next(line) := case
	line = 5 & i < 3: line + 1; -- if(True)
	line = 5: 8; -- if(False)
	line = 3 & i < 10: line + 1; -- while(True)
	line = 3:  9; -- while(False)
	line = 8: 3; -- loop while
	line = 10: 10; 
	TRUE: line + 1; 
esac;

next(i) := case
	line = 4: i + 1;
	TRUE: i; 
esac;

next(j) := case
	line = 6: j + 1;
	TRUE: j; 
esac;

INVARSPEC j < 3;
INVARSPEC i < 10;
