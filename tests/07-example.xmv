MODULE main

VAR
i: integer;
b: boolean;
line: integer;

ASSIGN
init(i) := 0;
init(b) := FALSE;
init(line) := 1;

next(line) := case
	line = 5 & i = 5: line + 1; -- if(True)
	line = 5: 8; -- if(False)
	line = 3 & (! b = TRUE): line + 1; -- while(True)
	line = 3:  9; -- while(False)
	line = 8: 3; -- loop while
	line = 10: 10; 
	TRUE: line + 1; 
esac;

next(i) := case
	line = 4: i + 1;
	TRUE: i; 
esac;

next(b) := case
	line = 6: TRUE;
	TRUE: b; 
esac;

INVARSPEC i < 5 -> !b;
LTLSPEC F i = 5;
