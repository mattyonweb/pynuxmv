MODULE main

VAR
i: integer;
b: boolean;
line: {1, 2, 3, 4, 5, 6, 7, 8};

ASSIGN
init(i) := 0;
init(b) := FALSE;
init(line) := 1;

next(line) := case
	line = 3 & i = 5: line + 1; -- if(True)
	line = 3: 6; -- if(False)
	line = 1 & (! b = TRUE): line + 1; -- while(True)
	line = 1:  7; -- while(False)
	line = 6: 1; -- loop while
	line = 7: 7; 
	TRUE: line + 1; 
esac;

next(i) := case
	line = 2: i + 1;
	TRUE: i; 
esac;

next(b) := case
	line = 4: TRUE;
	TRUE: b; 
esac;

INVARSPEC i < 5 -> !b;
LTLSPEC F i = 5;
